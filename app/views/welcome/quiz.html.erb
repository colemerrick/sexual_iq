<script>
	// hello
	var score = 0;

	var questions = [
		['Using two condoms is safer.', 'false'],
		['You need a parent to get advice.', 'false'],
		['You cannot get sexually transmitted diseases through anal sex.', 'false'],
		['Sex is fun.', 'true'],
		['If you are having sex you are taking a risk.', 'true'],
		['Happy relationships exist without sex', 'true'], 	
	];

	function askQuestion(question) {
		var answer = prompt(question[0],'');
			if (answer == question[1]) {
				alert('Correct!');
				score++;
			} else {
				alert('Sorry. The correct answer is ' + question[1]);
			};
	};

	for (var i=0; i<questions.length; i++) {
		askQuestion(questions[i]);
	};
</script>

<script>
	var message = 'You got ' + score;
	message += ' out of ' + questions.length;
	message += ' questions correct.';
	document.write('<p style="margin-top: 40%;text-align:center;">' + message + '</p>');
</script>
