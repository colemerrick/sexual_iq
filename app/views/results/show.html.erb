<% content_for :top_menu do %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <!--<div class="frame"></div>-->
            <%= image_tag "resultsheading.png", style: "width: 371px; height: auto; margin-top:10px;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="col-md-4 col-md-offset-4" style="text-align: center;">
	<div class="frame">
		<p style="font-size:30px;display:inline-block;">You're a </p><p style="font-size:30px;display:inline-block;color: #9013fe;margin-left:8px;"><%= @result.bracket %></p>
		<div style="clear:both; height: 20px; width:100%;"></div>
		<p style="font-size:30px;display:inline-block;">Score:</p><p style="font-size:30px;display:inline-block;color: #9013fe;margin-left:8px;"><%= @result.score %>%</p>
	</div>
</div>

<div class="col-md-4 col-md-offset-4">
	<!--<div class="frame"></div>-->
	<%= image_tag "citychart.png", style: "width: 371px; height: auto; margin-top:10px;" %>
</div>

<div class="col-md-4 col-md-offset-4">
	<div class="frame">
		<p style="margin: 10px;font-size:18px;">You are not alone, we are here to answer your questions (within 24 hours!): <a href="YourRealityCheck.org/ask-a-question">YourRealityCheck.org/ask-a-question</a></p>
		<p style="margin: 10px;font-size:18px;">Learn more about other ways we empower individuals to make informed sexual health choices at our parent organization: <a href="clarishealth.org">ClarisHealth.org</a></p>
	</div>
</div>

<div style="display:none;">
	<p>
		<strong>Age:</strong>
		<%= @result.age %>
	</p>
	<p>
		<strong>School:</strong>
		<%= @result.school %>
	</p>
	<p>
		<strong>Zip code:</strong>
		<%= @result.zip_code %>
	</p>
	<p>
		<strong>Score:</strong>
		<%= @result.score %>
	</p>
</div>